{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
	"allowSyntheticDefaultImports": true,
	"allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@assets/*": ["./src/app/assets/*"],
      "@components/*": ["./src/app/components/*"],
      "@fonts/*": ["./src/app/fonts/*"],
      "@hooks/*": ["./src/app/hooks/*"],
      "@services/*": ["./src/app/services/*"],
      "@src/*": ["./src/*"],
      "@store/*": ["./src/app/store/*"],
      "@theme/*": ["./src/app/theme/*"],
      "@utils/*": ["./src/app/utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/utils/task.ts"],
  "exclude": ["node_modules"]
}
